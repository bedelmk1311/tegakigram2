<!--バリデーションエラーメッセ-->
<%= render 'layouts/error', obj: @post %>

<div class='container'>
  <div class='row'>

    <div class='col-md-3'><!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class='col-md-9'><!--メインコンテンツ-->
      <h2 class="font-weight-bold">
        <i class="fa-solid fa-gear fa-sm" ></i>投稿編集
      </h2>
      <%= form_with model: @post do |f| %>
        <%= f.file_field :post_image, accept: "image/* ", class: "m-3" %><!--#accept属性で画像の種類を指定-->
        <%= f.text_area :body, class: "form-control m-3", rows:'5' %>
        <%= f.submit '保存', class: "btn btn-sm btn-outline-success m-3" %>
        <%= link_to '戻る', post_path(@post), class: "btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>

  </div>
</div>