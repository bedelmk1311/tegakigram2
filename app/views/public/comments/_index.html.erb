<!--public/posts/show-->

<div class="">
    <table class='table table-hover table-inverse'>
      <% post.comments.each do |comment| %>
        <tr>
          <td>
            <%= comment.created_at.strftime("%m月%d日 %H:%M") %>
          </td>
          <td>
            <%= link_to user_path(comment.user)do %>
              <%= image_tag comment.user.get_profile_image, size:"30x30", class:"rounded-circle" %><br>
            <% end %>
            <%= comment.user.name %>
          </td>
          <td>
            <%= comment.message %>
          </td>
          <td>
            <% if comment.user == current_user %>
              <%= link_to post_comment_path(comment.post, comment), method: :delete do %>
                <i class="fa-solid fa-trash-can fa-xl" style="color: #dc3545"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
</div>