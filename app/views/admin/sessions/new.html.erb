<div class="container bg- ">
  <div class="col-6 mx-auto my-5">

    <h2 class="font-weight-bold text-center ">管理者ログイン画面</h2>
    <div class="text-center">
      <%= render 'layouts/logo' %>
    </div>

    <div class="form-body p-4 text-center">
      <!--%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %-->
      <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
 
        <div class="field"><!--メール欄-->
          <%= f.email_field :email, placeholder: "Eメール", autofocus: true, autocomplete: "email", class: "form-control mx-auto m-1" %>
        </div>

        <div class="field"><!--パスワード欄-->
          <%= f.password_field :password, placeholder: "パスワード" , autocomplete: "current-password",class: "form-control mx-auto m-1" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions"><!--ボタン-->
          <%= f.submit "ログイン" , class: "btn btn-sm btn-outline-success m-1"%>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
